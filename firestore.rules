
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isResourceOwner() {
      return request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    function isCreatingOwnedResource() {
      return request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // --- STANDARD COLLECTIONS (Read/Write Allowed) ---
    // These hold auxiliary data where client-side optimistic updates are acceptable.
    
    match /accounts/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }

    match /transactions/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }

    match /projects/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }

    match /contractors/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }

    match /customers/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }

    match /invoices/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }

    match /invoice_payments/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }

    match /merchant_profiles/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }

    match /service_items/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }

    match /system_settings/{docId} {
      allow read, update, delete: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
    }
    
    // --- SECURE BANKING DATA ---
    match /bank_connections/{docId} {
      // NO ONE can read or write bank tokens from the browser.
      // This prevents Plaid access tokens from being leaked or stolen.
      allow read, write: if false; 
    }

    // --- INTEGRITY COLLECTIONS (Strict Enforcement) ---

    // Ledger: Immutable History
    // CRITICAL FIX: Deny WRITE from client. Forces usage of 'postJournalEntrySecure' Cloud Function.
    match /journal_entries/{docId} {
      allow read: if isResourceOwner();
      allow create, update, delete: if false; 
    }

    // Reconciliations: Immutable Periods
    // CRITICAL FIX: Deny UPDATE/DELETE. Once locked, it stays locked.
    match /reconciliations/{docId} {
      allow read: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
      allow update, delete: if false;
    }

    // Audit Log: Tamper-Proof
    match /audit_events/{docId} {
      allow read: if isResourceOwner();
      allow create: if isCreatingOwnedResource();
      allow update, delete: if false; 
    }
  }
}
